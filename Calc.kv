<CalcButton@Button>:
    font_size: 32

<CalcGrid>:
    id: calc
    display: entry
    rows: 6
    padding: 8
    spacing: 8

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 8
        CalcButton:
            text:"M"
            on_press: entry.text += self.text
        CalcButton:
            text:"M+"
            on_press: entry.text += self.text
        CalcButton:
            text:"M+"
            on_press: entry.text += self.text
        CalcButton:
            text:"/"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CalcButton:
            text:"7"
            on_press: entry.text += self.text
        CalcButton:
            text:"8"
            on_press: entry.text += self.text
        CalcButton:
            text:"9"
            on_press: entry.text += self.text
        CalcButton:
            text:"*"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CalcButton:
            text:"4"
            on_press: entry.text += self.text
        CalcButton:
            text:"5"
            on_press: entry.text += self.text
        CalcButton:
            text:"6"
            on_press: entry.text += self.text
        CalcButton:
            text:"+"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CalcButton:
            text:"1"
            on_press: entry.text += self.text
        CalcButton:
            text:"2"
            on_press: entry.text += self.text
        CalcButton:
            text:"3"
            on_press: entry.text += self.text
        CalcButton:
            text:"-"
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CalcButton:
            text:"0"
            on_press: entry.text += self.text
        CalcButton:
            text:"AC"
            on_press: entry.text = ""
        CalcButton:
            text:"="
            on_press: calc.equal(entry.text)
        
    

    
